<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/guatemala"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/patria"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Poemas a la Patria"
        android:backgroundTint="#AF2502"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btnguerra"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Poemas de Guerra"
        android:backgroundTint="#AF2502"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btnlibertad"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Poemas de Libertad"
        android:backgroundTint="#AF2502"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:onClick="onClick"
        />

</LinearLayout>